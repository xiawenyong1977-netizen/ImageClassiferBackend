# ===== MySQL数据库配置 =====
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=image_classifier
MYSQL_POOL_SIZE=10
MYSQL_MAX_OVERFLOW=5

# ===== 大模型API配置 =====
# 固定使用阿里云通义千问
LLM_PROVIDER=aliyun
LLM_API_KEY=sk-your-dashscope-api-key-here
LLM_MODEL=qwen-vl-plus
LLM_MAX_TOKENS=500
LLM_TIMEOUT=30

# ===== 应用配置 =====
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false
APP_ENV=production

# ===== 图片配置 =====
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp,gif

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_FILE=/var/log/image-classifier/app.log

# ===== 统计配置 =====
ENABLE_REQUEST_LOG=true
LOG_RETENTION_DAYS=90

# ===== 成本配置（用于统计） =====
COST_PER_API_CALL=0.01

# ===== 提示词配置 =====
# 可以自定义修改提示词以优化分类效果
CLASSIFICATION_PROMPT="请对这张图片进行分类。你必须从以下8个类别中选择一个：\n\n1. social_activities - 社交活动（聚会、合影、多人互动场景）\n2. pets - 宠物萌照（猫、狗等宠物照片）\n3. single_person - 单人照片（个人照、自拍、肖像）\n4. foods - 美食记录（食物、餐饮、烹饪相关）\n5. travel_scenery - 旅行风景（旅游景点、自然风光、城市风景）\n6. screenshot - 手机截图（手机屏幕截图、应用界面）\n7. idcard - 证件照（身份证、护照、驾照等证件）\n8. other - 其它（无法归类到上述类别）\n\n请以JSON格式返回结果：\n{\n    \"category\": \"类别key（必须是上述8个之一）\",\n    \"confidence\": 0.95,\n    \"description\": \"简短描述图片内容（可选，中文，30字以内）\"\n}\n\n只返回JSON，不要有其他文字。"

# ===== 管理后台认证配置 =====
# JWT密钥（请使用强随机密钥，可用 openssl rand -hex 32 生成）
JWT_SECRET_KEY=your-secret-key-change-me-to-random-string-in-production

# 管理员账号
ADMIN_USERNAME=zywl

# 管理员密码哈希（bcrypt）
# 默认密码: zywl@123
# 请运行 python generate_password_hash.py 生成新的哈希值
ADMIN_PASSWORD_HASH=$2b$12$your-password-hash-here

